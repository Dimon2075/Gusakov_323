<Page x:Class="Gusakov_323.Pages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gusakov_323.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1200"
      Title="Page2" 
        Background="#F8F9F9">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- ТОЛЬКО ИЗОБРАЖЕНИЕ функции - вся информация там -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                BorderBrush="#16A085" BorderThickness="2" CornerRadius="8" 
                Background="#E8F8F5" Margin="5" Padding="10">
            <Image Height="160" Source="/images/2.png"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   ToolTip="Формула на изображении"/>
        </Border>

        <!-- Ввод x -->
        <Label Grid.Row="1" Grid.Column="0" Content="x:" FontSize="16" 
               FontWeight="Bold" Margin="5" Foreground="#117A65"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtX" Margin="5" Padding="8" 
                 FontSize="16" Text="2" PreviewTextInput="NumberValidationTextBox"
                 ToolTip="Введите значение x"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="число" 
                   VerticalAlignment="Center" Foreground="Gray"/>

        <!-- Ввод y -->
        <Label Grid.Row="2" Grid.Column="0" Content="y:" FontSize="16" 
               FontWeight="Bold" Margin="5" Foreground="#117A65"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtY" Margin="5" Padding="8" 
                 FontSize="16" Text="3" PreviewTextInput="NumberValidationTextBox"
                 ToolTip="Введите значение y"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Text="число" 
                   VerticalAlignment="Center" Foreground="Gray"/>

        <!-- Выбор функции f(x) - 3 переключателя -->
        <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" 
                   Text="Выберите f(x):" FontSize="14" 
                   FontWeight="Bold" Margin="5,10,5,5" Foreground="#0E6655"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <RadioButton x:Name="rbSh" GroupName="FxFunction" Margin="15,5" 
                         FontSize="14" Content="sh(x)" IsChecked="False"
                         Foreground="#117A65" ToolTip="Гиперболический синус"/>
            <RadioButton x:Name="rbX2" GroupName="FxFunction" Margin="15,5" 
                         FontSize="14" Content="x²" IsChecked="False"
                         Foreground="#117A65" ToolTip="Квадрат"/>
            <RadioButton x:Name="rbExp" GroupName="FxFunction" Margin="15,5" 
                         FontSize="14" Content="eˣ" IsChecked="True"
                         Foreground="#117A65" ToolTip="Экспонента"/>
        </StackPanel>

        <!-- Результат -->
        <Label Grid.Row="5" Grid.Column="0" Content="a = " FontSize="18" 
               FontWeight="Bold" Margin="5" Foreground="#117A65"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtResult" Margin="5" Padding="8" 
                 FontSize="18" FontWeight="Bold" IsReadOnly="True" 
                 Background="#E8F8F5" Foreground="#117A65" 
                 ToolTip="Результат вычисления"/>
        <TextBlock Grid.Row="5" Grid.Column="2" x:Name="txtStatus" 
                   Text="Готов" VerticalAlignment="Center" 
                   Foreground="Green"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="btnCalculate" Width="120" Height="40" Margin="10" 
                    Click="btnCalculate_Click" FontSize="14" 
                    Background="#16A085" Foreground="White" BorderThickness="0"
                    ToolTip="Вычислить">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓ " FontSize="18"/>
                    <TextBlock Text="Вычислить"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnClear" Width="120" Height="40" Margin="10" 
                    Click="btnClear_Click" FontSize="14"
                    Background="#E67E22" Foreground="White" BorderThickness="0"
                    ToolTip="Очистить">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✗ " FontSize="18"/>
                    <TextBlock Text="Очистить"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Только результат (без дублирования формулы) -->
        <Border Grid.Row="7" Grid.Column="2" VerticalAlignment="Bottom" 
                Background="#F2F3F4" CornerRadius="5" Padding="5">
            <TextBlock Text="Ответ появится выше" 
                       FontSize="11" Foreground="Gray" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
