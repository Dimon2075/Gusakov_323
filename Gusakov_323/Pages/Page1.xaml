<Page x:Class="Gusakov_323.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gusakov_323.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1200"
      Title="Вычисление функции t">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
        BorderBrush="#16A085" BorderThickness="2" CornerRadius="8" 
        Background="#E8F8F5" Margin="5" Padding="10">
            <Image Height="160" Source="/images/1.png"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           ToolTip="Формула на изображении"/>
        </Border>

        <!-- Ввод данных -->
        <!-- x -->
        <Label Grid.Row="1" Grid.Column="0" Content="x:" FontSize="16" FontWeight="Bold" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtX" Margin="5" Padding="5" PreviewTextInput="NumberValidationTextBox"
                 FontSize="16" Text="0" ToolTip="Введите значение x (может быть любым числом)"/>

        <!-- y -->
        <Label Grid.Row="2" Grid.Column="0" Content="y:" FontSize="16" FontWeight="Bold" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtY" Margin="5" Padding="5" PreviewTextInput="NumberValidationTextBox"
                 FontSize="16" Text="0" ToolTip="Введите значение y (может быть любым числом)"/>

        <!-- z -->
        <Label Grid.Row="3" Grid.Column="0" Content="z:" FontSize="16" FontWeight="Bold" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtZ" Margin="5" Padding="5" PreviewTextInput="NumberValidationTextBox"
                 FontSize="16" Text="0" ToolTip="Введите значение z (может быть любым числом)"/>

        <!-- Результат -->
        <Label Grid.Row="4" Grid.Column="0" Content="t = " FontSize="18" FontWeight="Bold" Margin="5"/>
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtResult" Margin="5" Padding="8" 
                 FontSize="18" FontWeight="Bold" IsReadOnly="True"  
                 Background="#E8F8F5" Foreground="#117A65"
                 ToolTip="Результат вычисления"/>

        <!-- Статус результата -->
        <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                   x:Name="txtStatus" Margin="5" Padding="5" 
                   FontSize="12" Foreground="Gray" 
                   Text="Готов к вычислениям"/>

        <!-- Кнопки с иконками -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button x:Name="btnCalculate" Width="130" Height="45" Margin="15" 
                    Click="btnCalculate_Click" FontSize="14" Background="#16A085" Foreground="White" 
                    ToolTip="Вычислить значение функции">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓ " FontSize="20"/>
                    <TextBlock Text="Вычислить" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnClear" Width="130" Height="45" Margin="15" 
                    Click="btnClear_Click" FontSize="14" Background="#E67E22" Foreground="White"
                    ToolTip="Очистить все поля">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✗ " FontSize="20"/>
                    <TextBlock Text="Очистить" VerticalAlignment="Center" FontSize="14"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Информационная панель -->
        <Border Grid.Row="6" Grid.Column="2" VerticalAlignment="Bottom" 
                Background="#FFF5F5F5" CornerRadius="8" Padding="8" Margin="5">
            <StackPanel>
                <TextBlock Text="π ≈ 3.14159265359" FontStyle="Italic" Foreground="Gray" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
