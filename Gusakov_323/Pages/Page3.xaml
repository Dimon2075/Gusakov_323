<Page x:Class="Gusakov_323.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gusakov_323.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1200"
      Title="Page3">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Изображение формулы -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="#16A085" BorderThickness="2" CornerRadius="8" 
                Background="#E8F8F5" Margin="5" Padding="10">
            <Image Source="/images/3.png" Height="90" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   ToolTip="y = (10⁻²·b·c)/x + cos(√(a³))·x"/>
        </Border>

        <!-- Панель ввода параметров -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="#16A085" BorderThickness="1" CornerRadius="5" 
                Background="#E8F8F5" Margin="5" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" 
                           Text="Параметры табуляции:" 
                           FontSize="14" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#16A085" Margin="5"/>

                <!-- x0 -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="x₀ =" 
                           FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,5" Foreground="#16A085"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtX0" 
                         Width="90" Margin="5" Padding="5" 
                         FontSize="14" Text="0,5" 
                         PreviewTextInput="NumberValidationTextBox"
                         ToolTip="Начальное значение x"/>

                <!-- xk -->
                <TextBlock Grid.Row="1" Grid.Column="2" Text="xₖ =" 
                           FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,5" Foreground="#16A085"/>
                <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtXk" 
                         Width="90" Margin="5" Padding="5" 
                         FontSize="14" Text="2,5" 
                         PreviewTextInput="NumberValidationTextBox"
                         ToolTip="Конечное значение x"/>

                <!-- dx -->
                <TextBlock Grid.Row="1" Grid.Column="4" Text="dx =" 
                           FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,5" Foreground="#16A085"/>
                <TextBox Grid.Row="1" Grid.Column="5" x:Name="txtDx" 
                         Width="90" Margin="5" Padding="5" 
                         FontSize="14" Text="0,2" 
                         PreviewTextInput="NumberValidationTextBox"
                         ToolTip="Шаг табуляции"/>

                <!-- a -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="a =" 
                           FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,5" Foreground="#16A085"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtA" 
                         Width="90" Margin="5" Padding="5" 
                         FontSize="14" Text="2" 
                         PreviewTextInput="NumberValidationTextBox"
                         ToolTip="Параметр a (под корнем)"/>

                <!-- b -->
                <TextBlock Grid.Row="2" Grid.Column="2" Text="b =" 
                           FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,5" Foreground="#16A085"/>
                <TextBox Grid.Row="2" Grid.Column="3" x:Name="txtB" 
                         Width="90" Margin="5" Padding="5" 
                         FontSize="14" Text="3" 
                         PreviewTextInput="NumberValidationTextBox"
                         ToolTip="Параметр b (в числителе)"/>

                <!-- c -->
                <TextBlock Grid.Row="2" Grid.Column="4" Text="c =" 
                           FontSize="14" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,5" Foreground="#16A085"/>
                <TextBox Grid.Row="2" Grid.Column="5" x:Name="txtC" 
                         Width="90" Margin="5" Padding="5" 
                         FontSize="14" Text="1" 
                         PreviewTextInput="NumberValidationTextBox"
                         ToolTip="Параметр c (в числителе)"/>
            </Grid>
        </Border>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnCalculate" Width="140" Height="45" Margin="15" 
                    Click="btnCalculate_Click" FontSize="14" 
                    Background="#16A085" Foreground="White" BorderThickness="0"
                    ToolTip="Вычислить и построить график">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✓ " FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Вычислить" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnClear" Width="140" Height="45" Margin="15" 
                    Click="btnClear_Click" FontSize="14"
                    Background="#E67E22" Foreground="White" BorderThickness="0"
                    ToolTip="Очистить все поля">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="✗ " FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Очистить" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Результаты (таблица значений) -->
        <Border Grid.Row="3" Grid.Column="0" 
                BorderBrush="#16A085" BorderThickness="1" CornerRadius="5" 
                Background="White" Margin="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Таблица значений x и y" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#16A085" Margin="5"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="txtResults" 
                             FontFamily="Consolas" FontSize="12"
                             IsReadOnly="True" Background="#F8F9F9"
                             TextWrapping="NoWrap" Margin="5" Padding="5"
                             ToolTip="Результаты табуляции" MinWidth="350"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- График функции на Canvas -->
        <Border Grid.Row="3" Grid.Column="1"
                BorderBrush="#16A085" BorderThickness="1" CornerRadius="5" 
                Background="White" Margin="5" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="График функции" 
                           FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#16A085" Margin="5"/>

                <!-- Информация о масштабе -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,0,0,5">
                    <TextBlock x:Name="txtScaleInfo" 
                               Text="Масштаб: автоматический" 
                               FontSize="11" Foreground="#16A085" 
                               FontStyle="Italic" Margin="5"/>
                </StackPanel>

                <!-- Canvas для рисования графика с прокруткой -->
                <ScrollViewer Grid.Row="2" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto"
                              Background="#F0F0F0"
                              BorderBrush="#CCCCCC"
                              BorderThickness="1">
                    <Canvas x:Name="GraphCanvas" 
                            Width="800" 
                            Height="400" 
                            Background="#FFFFFF"
                            MouseMove="GraphCanvas_MouseMove"
                            ToolTip="Наведите на точку для просмотра координат"/>
                </ScrollViewer>

                <!-- Координаты курсора -->
                <TextBlock Grid.Row="2" x:Name="txtCursorCoords" 
                           Text="" FontSize="10" Foreground="Gray"
                           HorizontalAlignment="Right" VerticalAlignment="Bottom"
                           Margin="0,0,10,10" Background="#AAFFFFFF" Padding="3"/>
            </Grid>
        </Border>

        <!-- Статусная строка -->
        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                Background="#F0F0F0" CornerRadius="3" Margin="5" Padding="5">
            <TextBlock x:Name="txtStatus" 
                       Text="Готов к работе. Введите параметры a, b, c и границы x" 
                       Foreground="#16A085" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Page>
